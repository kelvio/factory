<h1>Listing items</h1>

<table>
  <tr>
    <th>Valor</th>
    <th>Vencimento</th>
    <th>Situacao item</th>
    <th>Despesa</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.valor %></td>
    <td><%= item.vencimento %></td>
    <td><%= item.situacao_item %></td>
    <td><%= item.despesa %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

