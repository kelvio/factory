<%= form_for(@despesa) do |f| %>
  
  <%= render 'shared/error', :object => @despesa %>
  
  <div class="box-left">   
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field(:nome, {:required => 'required'}) %>
    <p class="hint"><%= t('despesa.form.nome.hint') %></p>
  </div>
  <div class="field">
    <%= f.label :tipo_despesa %><br />
    <%= f.select(:tipo_despesa_id, TipoDespesa.all.collect {|t| [t.nome, t.id]}, {:include_blank => t('despesa.form.tipo_despesa.no_selection_label'), :required => 'required'}) %>
    <p class="hint"><%= t('despesa.form.tipo_despesa.hint') %></p>
  </div>  
  </div>
  <div class="actions">
    <input type="button" onclick="location.href='<%= despesas_path %>'" value="<%= t('socio.new.back_link_label') %>" />

    <%= f.submit :value => 'Salvar' %>
  </div>  
<% end %>

