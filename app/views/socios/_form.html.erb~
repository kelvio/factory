    <p class="hint"><%= t('socio.form.capital.hint') %></p>
  </div>
  <div class="field">
    <%= f.label :cpf %><br />
    <%= f.text_field(:cpf, {:required => 'required'}) %>
    <p class="hint"><%= t('socio.form.cpf.hint') %></p>
  </div>
  <div class="field">
