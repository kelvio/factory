<%= javascript_include_tag "jquery.maskedinput-1.3.min.js" %>
<script type="text/javascript">
    $(document).ready(function() {
        $("#socio_cpf").mask("999.999.999-99");
        $("#socio_capital").maskMoney({symbol:'R$ ', showSymbol:true, thousands:'.', decimal:',', symbolStay: true});
        
        $("form").submit(function(e) {
            $('#socio_cpf').val($('#socio_cpf').val().replace('.', '').replace('.', '').replace('-', ''))
            valor = $('#socio_capital').val();
            valor = valor.replace('R$ ', '').replace('.', '').replace('.', '').replace('.', '').replace('.', '').replace(',', '.');
            $('#socio_capital').val(valor);
        });        
    });
</script>
<%= form_for(@socio) do |f| %>

  <%= render 'shared/error', :object => @socio %>
    
  <div class="box-left">
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field(:nome, {:required => 'required'}) %>
    <p class="hint"><%= t('socio.form.nome.hint') %></p>
  </div>
  <div class="field">
    <%= f.label :capital %><br />
    <%= f.text_field(:capital, {:required => 'required'}) %>
    <p class="hint"><%= t('socio.form.capital.hint') %></p>
  </div>
  <div class="field">
    <%= f.label :cpf %><br />
    <%= f.text_field(:cpf, {:required => 'required'}) %>
    <p class="hint"><%= t('socio.form.cpf.hint') %></p>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field(:email, {:required => 'required'}) %>
    <p class="hint"><%= t('socio.form.email.hint') %></p>
  </div>
  <div class="field">
    <%= f.label :senha %><br />
    <%= f.password_field(:senha, {:required => 'required'}) %>
    <p class="hint"><%= t('socio.form.senha.hint') %></p>
  </div>
  <div class="field">
    <%= f.label :senha_confirmation %><br />
    <%= f.password_field(:senha_confirmation, {:required => 'required'})%>
    <p class="hint"><%= t('socio.form.senha_confirmation.hint') %></p>
  </div>
  </div>
  <div class="actions">
    <input type="button" onclick="location.href='<%= socios_path %>'" value="<%= t('socio.new.back_link_label') %>" />
    <%= f.submit :value => t('general.save') %>    
  </div>
<% end %>
